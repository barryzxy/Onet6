Import('RTT_ROOT')
Import('rtconfig')
from building import *

cwd     = GetCurrentDir()
src	= Glob('*.c')
CPPPATH = [cwd]

# remove no need file.
if GetDepend('RT_USING_DFS') == False:
    src_need_remove = ['sdcard.c'] # need remove file list.
    src = SrcRemove(src, src_need_remove)

group = DefineGroup('Drivers', src, depend = [''], CPPPATH = CPPPATH)

Return('group')
